# ===================================
# FACTURIA 2.0 - Variables de Entorno
# ===================================

# Copiar este archivo como .env y completar con tus credenciales

# === GOOGLE GEMINI API ===
GOOGLE_API_KEY=tu_api_key_aqui

# === GMAIL API ===
# Opción 1: Gmail API (OAuth)
GMAIL_CLIENT_ID=tu_client_id_aqui
GMAIL_CLIENT_SECRET=tu_client_secret_aqui

# Opción 2: IMAP (más simple)
GMAIL_EMAIL=tu_email@gmail.com
GMAIL_PASSWORD=tu_app_password_aqui

# === BASE DE DATOS ===
DATABASE_URL=sqlite:///facturia2.db
# O para PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/facturia2

# === CONFIGURACIÓN ===
# Frecuencia de revisión de emails (minutos)
EMAIL_CHECK_INTERVAL=5

# Modo de operación
ENVIRONMENT=development  # development o production

# === STREAMLIT ===
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
